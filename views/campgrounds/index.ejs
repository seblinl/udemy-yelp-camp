<% layout("layouts/boilerplate") %>
    <h1>Campgrounds - All</h1>
    <% for (let camp of campgrounds) { %>
        <div class="card mb-2">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.image %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <h6 class="card-subtitle text-muted mb-2">
                            <%= camp.location %>
                        </h6>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <a class="btn btn-danger" href="/campgrounds/<%= camp._id %>">
                            <%= camp.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>