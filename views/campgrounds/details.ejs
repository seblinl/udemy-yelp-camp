<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-md-6 offset-md-1">

            <div class="card mb-3">
                <img class="card-img-top" src="<%= camp.image %>" alt="">

                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">&dollar;<%= camp.price %>
                    </li>
                </ul>

                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-info" href="/campgrounds/<%= camp._id %>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="post">
                        <button class="btn btn-warning" type="submit">Delete</a>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-md-4">

            <h2>Leave a Review</h2>
            <form class="mb-3 needs-validation" action="/campgrounds/<%= camp._id %>/reviews" method="post" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="body">Review:</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"
                        placeholder="Share your opinion..." required></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="rating">Rating:</label>
                    <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5" step="1">
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
            </form>

            <h2>Reviews</h2>
            <% for (let review of camp.reviews) { %>
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title">
                            Rating: <%= review.rating %>
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <%= review.body %>
                        </p>
                    </div>
                    <div class="card-footer">
                        <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
                            method="post">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>

        </div>

    </div>